        <script>
            let s = getItemStorage("Cart") || [];
            let TotalPrice = 0;
            var arr = new Array();
            $(document).ready(function () {
                $.each(s, function (key, item) {
                    arr[key] = { BookID: item.BookID, BookNums: item.BookNums, HasParts: item.HasParts, TotalPrice: item.Price, UserID: item.UserID };
                });
            });

            $.each(s, function (key, item) {
                let li = document.createElement("li");
                let img = document.createElement("img");
                let div1 = document.createElement("div");
                let div2 = document.createElement("div");
                let a = document.createElement("a");
                let div3 = document.createElement("div");
                let strong = document.createElement("strong");
                let div4 = document.createElement("div");
                let span1 = document.createElement("span");
                let span2 = document.createElement("span");
                let a2 = document.createElement("a");
                let i = document.createElement("i");
                let books = document.querySelector("#cartbooks").appendChild(li);
                li.appendChild(img);
                li.appendChild(div1);
                div1.appendChild(div2);
                div2.appendChild(a);
                div1.appendChild(div3);
                div3.appendChild(strong);
                div1.appendChild(div4);
                div4.appendChild(span1);
                div4.appendChild(span2);
                li.appendChild(a2);
                a2.appendChild(i);
                let liclass = li.classList.add("clearfix");
                let imgsrc = img.src = "/Resources/images/header-cart-image-02.jpg";
                let imgalt = img.alt = "Book Image";
                let divclass1 = div1.classList.add("item-info");
                let divclass2 = div2.classList.add("name");
                let atext = a.innerText = item.BookName;
                let ahref = a.href = "/User/BookDetails?BookID=" + item.BookID + "&UserID=" + item.UserID +"&AuthorID=" + item.AuthorID;
                let divclass3 = div3.classList.add("author");
                let strongtext = strong.innerText = "Author:";
                let div3text = div3.innerText = item.AuthorName;
                let divclass4 = div2.classList.add("price");
                let spanid = span1.classList.add("booknums");
                let span1text = span1.innerText = item.BookNums;
                let span1style = span1.style.color = "Black";
                let span2text = span2.innerText = "X " + item.Price + "$";
                let span2style1 = span2.style.color = "Black";
                let span2style2 = span2.style.marginLeft = -5;
                let a2href = a2.onclick = () => remove(item.BookID, item.HasParts);
                let iclass = i.classList.add("fa", "fa-trash-o");

                TotalPrice += item.Price;
            });
            $('#price').html(TotalPrice + "$");
            $('#counter').html(s.length);


            function remove(BookID, HasParts) {
                $.each(s, function (key, item) {
                    if (item.BookID == BookID && item.HasParts == HasParts) {
                        let itemIndex = s.indexOf(item);
                        removeItemStorage("Cart", itemIndex);
                        location.reload();
                    }
                });
            }
            function SaveCart() {
                $.ajax({
                    url: '/User/SaveCart',
                    type: 'POST',
                    traditional: true,
                    contentType: 'application/json;charset=utf-8',
                    dataType: 'json',
                    data: JSON.stringify(arr),
                    success: function (result) {
                        if (result == "Success") {
                            $.each(s, function (key, item) {
                                removeItemStorage("Cart", 0);
                            });            
                            toastr.success('Done', '', { timeOut: 7000 });
                            location.reload();
                        }
                        else {
                            toastr.error("You did't select any Book To Buy!!", "", { timeOut: 7000 });
                        }
                    }
                });
            }
            
            function setItemStorage(itemKey, itemValue) {
                localStorage.setItem(itemKey, JSON.stringify(itemValue));
            }
            function getItemStorage(itemKey) {
                return JSON.parse(localStorage.getItem(itemKey));
            }

            function addValueToItemStorage(itemKey, val) {
                let y = getItemStorage(itemKey);
                y.push(val);
                setItemStorage(itemKey, y);
            }
            function removeItemStorage(itemKey, val) {
                let item = getItemStorage(itemKey);
                item.splice(val, 1);
                setItemStorage(itemKey, item);
            }
        </script>
